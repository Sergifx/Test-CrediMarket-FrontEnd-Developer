{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@core/*": ["core/*"],
      "@models/*": ["core/models/*"],
      "@config/*": ["config/*"],
      "@components/*": ["components/*"],
      "@services/*": ["providers/services/*"],
      "@stores/*": ["providers/stores/*"],
      "@db/*": ["providers/db/*"],
      "@constants/*": ["core/constants/*"],
    }
  }
}
